<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Personalized Diet plan"
        android:textSize="25sp"
        android:textColor="#000000"/>
    <LinearLayout
        android:layout_width="366dp"
        android:layout_height="550dp"
        android:orientation="vertical"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:id="@+id/linearLayout2"
        android:background="#f5f4dd"
        android:layout_below="@+id/t1"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true">



        <LinearLayout
            android:layout_width="366dp"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:weightSum="1">

            <TextView
                android:id="@+id/t3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="YOUR BMI-"
                android:fontFamily="monospace"
                android:textColor="#000000"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/e1"
                android:layout_width="60sp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="366dp"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">
            <TextView
                android:id="@+id/t5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A BMI of between 18.5 and 25 is ideal. "
                android:textSize="20sp"
                android:textColor="#000000"/>

        </LinearLayout>




        <LinearLayout
            android:layout_width="366dp"
            android:layout_height="50dp"
            android:layout_alignEnd="@+id/linearLayout2"
            android:layout_below="@+id/t1"
            android:layout_marginTop="0dp"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:id="@+id/linearLayout3">

            <TextView
                android:id="@+id/t4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Daily intake of nutritions are given below:"
                android:textColor="#000000"
                android:textSize="20sp" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="366dp"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">
            <TextView
                android:id="@+id/t7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calorie Intake per day:"
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/e2"
                android:layout_width="60sp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="" />
            </LinearLayout>
        </LinearLayout>
</RelativeLayout>